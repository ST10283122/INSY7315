<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEY POLYGRAPH"
                    android:textSize="16sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CASES MANAGEMENT"
                    android:textSize="11sp"
                    android:textColor="#B8960F"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.15"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Page Title -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cases Management"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/pageSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage pending and archived cases"
            android:textSize="14sp"
            android:textColor="#999999"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/pageTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pageSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="#B8960F"
            app:boxBackgroundColor="#1A1A1A"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="#D4AF37"
            app:endIconMode="clear_text"
            app:endIconTint="#D4AF37"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search cases by booking ID or client name"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Statistics Cards -->
        <LinearLayout
            android:id="@+id/statsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/searchLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:textSize="9sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/pendingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="#FFA726"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFIRMED"
                        android:textSize="9sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/confirmedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="#4CAF50"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMPLETED"
                        android:textSize="9sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/completedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="#D4AF37"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARCHIVED"
                        android:textSize="9sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/archivedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="#9C27B0"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Pending Cases Section -->
        <TextView
            android:id="@+id/pendingCasesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING CASES"
            android:textSize="12sp"
            android:textColor="#999999"
            android:letterSpacing="0.2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/statsSection"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/pendingCasesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/pendingCasesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/pendingCasesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </androidx.cardview.widget.CardView>

        <!-- Load More Pending -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loadMorePendingButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="LOAD MORE PENDING CASES"
            android:textSize="16sp"
            android:textColor="#D4AF37"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#2A2A2A"
            app:strokeColor="#D4AF37"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/pendingCasesCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Archived Tests Section -->
        <TextView
            android:id="@+id/archivedCasesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARCHIVED TESTS"
            android:textSize="12sp"
            android:textColor="#999999"
            android:letterSpacing="0.2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/loadMorePendingButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <LinearLayout
            android:id="@+id/archivedTestsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/archivedCasesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Empty State for Archived -->
        <LinearLayout
            android:id="@+id/archivedEmptyState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="48dp"
            app:layout_constraintTop_toBottomOf="@id/archivedCasesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No archived tests yet"
                android:textSize="18sp"
                android:textColor="#999999"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed and released tests will appear here"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Load More Archived -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loadMoreArchivedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="LOAD MORE ARCHIVED TESTS"
            android:textSize="16sp"
            android:textColor="#9C27B0"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#2A2A2A"
            app:strokeColor="#9C27B0"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/archivedTestsList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure • Confidential • Professional"
            android:textSize="11sp"
            android:textColor="#666666"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/loadMoreArchivedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>