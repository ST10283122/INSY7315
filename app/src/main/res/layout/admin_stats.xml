<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEY POLYGRAPH"
                    android:textSize="16sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AND INVESTIGATIONS"
                    android:textSize="11sp"
                    android:textColor="#B8960F"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.15"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#D4AF37"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Page Title -->
            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analytics and Reporting"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/pageSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial and operational insights"
                android:textSize="14sp"
                android:textColor="#999999"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="4dp"/>

            <!-- Date Range Filter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/dateRangeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#D4AF37"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporting Period"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/dateRangeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Time"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/changeDateRangeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="CHANGE"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        app:backgroundTint="#D4AF37"
                        app:cornerRadius="6dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Financial Overview Section -->
            <TextView
                android:id="@+id/financialLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FINANCIAL OVERVIEW"
                android:textSize="12sp"
                android:textColor="#999999"
                android:letterSpacing="0.2"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="32dp"/>

            <!-- Revenue Stats Grid -->
            <LinearLayout
                android:id="@+id/revenueStatsRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL REVENUE"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/totalRevenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R 0.00"
                            android:textSize="28sp"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/totalRevenueSubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From completed payments"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PENDING PAYMENTS"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/pendingPayments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R 0.00"
                            android:textSize="28sp"
                            android:textColor="#FFA726"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/pendingPaymentsSubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 outstanding invoices"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/revenueStatsRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVG SESSION VALUE"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/avgSessionValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R 0.00"
                            android:textSize="28sp"
                            android:textColor="#D4AF37"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Per booking"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEPOSITS COLLECTED"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/depositsCollected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R 0.00"
                            android:textSize="28sp"
                            android:textColor="#2196F3"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/depositsSubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From advance payments"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Operational Statistics Section -->
            <TextView
                android:id="@+id/operationalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPERATIONAL STATISTICS"
                android:textSize="12sp"
                android:textColor="#999999"
                android:letterSpacing="0.2"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="32dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/operationalStatsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Total Bookings -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cases"
                            app:tint="#D4AF37"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Bookings"
                                android:textSize="14sp"
                                android:textColor="#999999"/>

                            <TextView
                                android:id="@+id/totalBookings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 bookings"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/confirmedBookings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Total Users -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            app:tint="#D4AF37"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Users"
                                android:textSize="14sp"
                                android:textColor="#999999"/>

                            <TextView
                                android:id="@+id/totalUsers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 users"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/activeUsers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="#D4AF37"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Total Tests -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_test_type"
                            app:tint="#D4AF37"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Tests"
                                android:textSize="14sp"
                                android:textColor="#999999"/>

                            <TextView
                                android:id="@+id/totalTests"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 tests"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/completedTests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Test Types -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check"
                            app:tint="#D4AF37"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available Test Types"
                                android:textSize="14sp"
                                android:textColor="#999999"/>

                            <TextView
                                android:id="@+id/testTypes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 test types"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/activeTestTypes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="#2196F3"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Test Type Breakdown Section -->
            <TextView
                android:id="@+id/testTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST TYPE BREAKDOWN"
                android:textSize="12sp"
                android:textColor="#999999"
                android:letterSpacing="0.2"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="32dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/testTypeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:id="@+id/testTypeBreakdownContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No test data available"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Footer -->
            <TextView
                android:id="@+id/footerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure • Confidential • Professional"
                android:textSize="11sp"
                android:textColor="#666666"
                android:letterSpacing="0.1"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>