<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEY POLYGRAPH"
                    android:textSize="16sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER DETAILS"
                    android:textSize="11sp"
                    android:textColor="#B8960F"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.15"/>
            </LinearLayout>

        </LinearLayout>

        <!-- User Profile Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#2A2A2A"
                    app:tint="#D4AF37"
                    android:padding="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- User Name -->
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toBottomOf="@id/profileImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <!-- User Role -->
                <TextView
                    android:id="@+id/userRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLIENT"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:background="#D4AF37"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"
                    app:layout_constraintTop_toBottomOf="@id/userName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/statusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE"
                    android:textSize="11sp"
                    android:textColor="#000000"
                    android:background="#4CAF50"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"
                    app:layout_constraintTop_toBottomOf="@id/userRole"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

                <!-- User ID -->
                <TextView
                    android:id="@+id/userIdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER ID"
                    android:textSize="10sp"
                    android:textColor="#999999"
                    android:letterSpacing="0.1"
                    app:layout_constraintTop_toBottomOf="@id/statusBadge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USR-0000"
                    android:textSize="14sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toBottomOf="@id/userIdLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Information Section -->
        <TextView
            android:id="@+id/contactLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT INFORMATION"
            android:textSize="12sp"
            android:textColor="#999999"
            android:letterSpacing="0.2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/contactCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/contactLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:contentDescription="Email"
                        app:tint="#D4AF37"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/userEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email@example.com"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:contentDescription="Phone"
                        app:tint="#D4AF37"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/userPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No phone"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="Location"
                        app:tint="#D4AF37"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/userAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No address provided"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Professional Information Section (For Employees) -->
        <TextView
            android:id="@+id/professionalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFESSIONAL INFORMATION"
            android:textSize="12sp"
            android:textColor="#999999"
            android:letterSpacing="0.2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/contactCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/professionalCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/professionalLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Certification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_certificate"
                        android:contentDescription="Certification"
                        app:tint="#D4AF37"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Certification"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/certificationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- License Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_badge"
                        android:contentDescription="License"
                        app:tint="#D4AF37"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="License Number"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/licenseText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Specialization -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_specialty"
                        android:contentDescription="Specialization"
                        app:tint="#D4AF37"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specialization"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/specializationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Section -->
        <TextView
            android:id="@+id/actionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIONS"
            android:textSize="12sp"
            android:textColor="#999999"
            android:letterSpacing="0.2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/professionalCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Update Details Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateDetailsButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="UPDATE DETAILS"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#D4AF37"
            app:cornerRadius="8dp"
            app:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/actionsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Reset Password Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetPasswordButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="RESET PASSWORD"
            android:textSize="16sp"
            android:textColor="#D4AF37"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#2A2A2A"
            app:strokeColor="#D4AF37"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/updateDetailsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Suspend Account Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/suspendAccountButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="SUSPEND ACCOUNT"
            android:textSize="16sp"
            android:textColor="#FFA726"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#1A1A1A"
            app:strokeColor="#FFA726"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/resetPasswordButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Delete Account Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteAccountButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="DELETE ACCOUNT"
            android:textSize="16sp"
            android:textColor="#F44336"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#1A1A1A"
            app:strokeColor="#F44336"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/suspendAccountButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure • Confidential • Professional"
            android:textSize="11sp"
            android:textColor="#666666"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/deleteAccountButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>