<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEY POLYGRAPH"
                    android:textSize="16sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AND INVESTIGATIONS"
                    android:textSize="11sp"
                    android:textColor="#B8960F"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.15"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/filterButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_filter"
                android:contentDescription="Filter"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Page Title Section -->
        <LinearLayout
            android:id="@+id/titleSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Results Archive"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#D4AF37"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Access and manage past examination reports"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- Stats Overview -->
        <LinearLayout
            android:id="@+id/statsOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/titleSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <!-- Total Tests -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="247"
                    android:textSize="24sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Tests"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- This Month -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textSize="24sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- This Year -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#1A1A1A"
                android:padding="16dp"
                android:layout_marginStart="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156"
                    android:textSize="24sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Year"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Results List Label -->
        <TextView
            android:id="@+id/resultsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECENT RESULTS"
            android:textSize="12sp"
            android:textColor="#999999"
            android:letterSpacing="0.2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/statsOverview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Results List -->
        <LinearLayout
            android:id="@+id/resultsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/resultsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <!-- Result 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- PDF Icon -->
                    <ImageView
                        android:id="@+id/pdfIcon1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_test_type"
                        android:contentDescription="PDF"
                        app:tint="#D4AF37"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Test ID -->
                    <TextView
                        android:id="@+id/testId1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="#PG2024-0921"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif-light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon1"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn1"
                        android:layout_marginStart="16dp"/>

                    <!-- Client Name -->
                    <TextView
                        android:id="@+id/clientName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="John Smith"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/testId1"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon1"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn1"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"/>

                    <!-- Test Type -->
                    <TextView
                        android:id="@+id/testType1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pre-Employment Screening"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        app:layout_constraintTop_toBottomOf="@id/clientName1"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon1"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn1"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"/>

                    <!-- Download Button -->
                    <ImageView
                        android:id="@+id/downloadBtn1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_download"
                        android:contentDescription="Download"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#D4AF37"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/testType1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:clickable="true"
                        android:focusable="true"/>

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#333333"
                        app:layout_constraintTop_toBottomOf="@id/testType1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <!-- Info Row -->
                    <LinearLayout
                        android:id="@+id/infoRow1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 3, 2024"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LOCATION"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Johannesburg"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FILE SIZE"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.4 MB"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/infoRow1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewBtn1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="VIEW PDF"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="#D4AF37"
                            app:cornerRadius="6dp"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shareBtn1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="SHARE"
                            android:textSize="12sp"
                            android:textColor="#D4AF37"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="#2A2A2A"
                            app:strokeColor="#D4AF37"
                            app:strokeWidth="1dp"
                            app:cornerRadius="6dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Result 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- PDF Icon -->
                    <ImageView
                        android:id="@+id/pdfIcon2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_test_type"
                        android:contentDescription="PDF"
                        app:tint="#D4AF37"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Test ID -->
                    <TextView
                        android:id="@+id/testId2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="#PG2024-0918"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif-light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon2"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn2"
                        android:layout_marginStart="16dp"/>

                    <!-- Client Name -->
                    <TextView
                        android:id="@+id/clientName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sarah Williams"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/testId2"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon2"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn2"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"/>

                    <!-- Test Type -->
                    <TextView
                        android:id="@+id/testType2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Relationship Verification"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        app:layout_constraintTop_toBottomOf="@id/clientName2"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon2"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn2"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"/>

                    <!-- Download Button -->
                    <ImageView
                        android:id="@+id/downloadBtn2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_download"
                        android:contentDescription="Download"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#D4AF37"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/testType2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:clickable="true"
                        android:focusable="true"/>

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#333333"
                        app:layout_constraintTop_toBottomOf="@id/testType2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <!-- Info Row -->
                    <LinearLayout
                        android:id="@+id/infoRow2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 1, 2024"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LOCATION"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pretoria"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FILE SIZE"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.8 MB"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/infoRow2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewBtn2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="VIEW PDF"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="#D4AF37"
                            app:cornerRadius="6dp"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shareBtn2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="SHARE"
                            android:textSize="12sp"
                            android:textColor="#D4AF37"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="#2A2A2A"
                            app:strokeColor="#D4AF37"
                            app:strokeWidth="1dp"
                            app:cornerRadius="6dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Result 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- PDF Icon -->
                    <ImageView
                        android:id="@+id/pdfIcon3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_test_type"
                        android:contentDescription="PDF"
                        app:tint="#D4AF37"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Test ID -->
                    <TextView
                        android:id="@+id/testId3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="#PG2024-0897"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif-light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon3"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn3"
                        android:layout_marginStart="16dp"/>

                    <!-- Client Name -->
                    <TextView
                        android:id="@+id/clientName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Michael Chen"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/testId3"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon3"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn3"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"/>

                    <!-- Test Type -->
                    <TextView
                        android:id="@+id/testType3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Criminal Investigation"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        app:layout_constraintTop_toBottomOf="@id/clientName3"
                        app:layout_constraintStart_toEndOf="@id/pdfIcon3"
                        app:layout_constraintEnd_toStartOf="@id/downloadBtn3"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"/>

                    <!-- Download Button -->
                    <ImageView
                        android:id="@+id/downloadBtn3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_download"
                        android:contentDescription="Download"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#D4AF37"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/testType3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:clickable="true"
                        android:focusable="true"/>

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#333333"
                        app:layout_constraintTop_toBottomOf="@id/testType3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <!-- Info Row -->
                    <LinearLayout
                        android:id="@+id/infoRow3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/divider3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sep 28, 2024"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LOCATION"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cape Town"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FILE SIZE"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:letterSpacing="0.1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.1 MB"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/infoRow3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewBtn3"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="VIEW PDF"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="#D4AF37"
                            app:cornerRadius="6dp"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shareBtn3"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="SHARE"
                            android:textSize="12sp"
                            android:textColor="#D4AF37"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="#2A2A2A"
                            app:strokeColor="#D4AF37"
                            app:strokeWidth="1dp"
                            app:cornerRadius="6dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Load More Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loadMoreBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="LOAD MORE RESULTS"
            android:textSize="14sp"
            android:textColor="#D4AF37"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#2A2A2A"
            app:strokeColor="#D4AF37"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/resultsList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure • Confidential • Professional"
            android:textSize="11sp"
            android:textColor="#666666"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/loadMoreBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>