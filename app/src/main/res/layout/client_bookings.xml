<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEY POLYGRAPH"
                    android:textSize="16sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AND INVESTIGATIONS"
                    android:textSize="11sp"
                    android:textColor="#B8960F"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.15"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Page Title -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Bookings"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/pageSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your scheduled sessions"
            android:textSize="14sp"
            android:textColor="#999999"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/pageTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pageSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="#B8960F"
            app:boxBackgroundColor="#1A1A1A"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="#D4AF37"
            app:endIconMode="clear_text"
            app:endIconTint="#D4AF37"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search bookings by ID, type or date"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Add Booking Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addBookingButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="NEW BOOKING REQUEST"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:icon="@drawable/ic_add"
            app:iconTint="#000000"
            app:backgroundTint="#D4AF37"
            app:cornerRadius="8dp"
            app:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/searchLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Bookings List -->
        <LinearLayout
            android:id="@+id/bookingsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/addBookingButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <!-- Booking 1 - Confirmed & Deposit Paid -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Booking Status Badge -->
                    <TextView
                        android:id="@+id/bookingStatus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFIRMED"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:background="#4CAF50"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Booking ID -->
                    <TextView
                        android:id="@+id/bookingId1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="BK-2024-1047"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif-light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/bookingStatus1"
                        android:layout_marginEnd="12dp"/>

                    <!-- Test Type -->
                    <TextView
                        android:id="@+id/testType1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pre-Employment Screening"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/bookingId1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="6dp"/>

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#333333"
                        app:layout_constraintTop_toBottomOf="@id/testType1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <!-- Info Grid -->
                    <LinearLayout
                        android:id="@+id/infoGrid1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <!-- Row 1: Date & Time -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DATE"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 15, 2024"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TIME"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10:00 AM"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Row 2: Location & Examiner -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LOCATION"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Johannesburg"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EXAMINER"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dr. S. Johnson"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Payment Status Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#2A2A2A"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_payment"
                                android:contentDescription="Payment"
                                app:tint="#D4AF37"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Status"
                                android:textSize="13sp"
                                android:textColor="#CCCCCC"
                                android:layout_marginStart="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DEPOSIT PAID"
                                android:textSize="11sp"
                                android:textColor="#000000"
                                android:background="#FFA726"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Action Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewDetails1"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:text="VIEW DETAILS"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        app:backgroundTint="#D4AF37"
                        app:cornerRadius="6dp"
                        app:layout_constraintTop_toBottomOf="@id/infoGrid1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Booking 2 - Pending & Awaiting Quote -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Booking Status Badge -->
                    <TextView
                        android:id="@+id/bookingStatus2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:background="#B8960F"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Booking ID -->
                    <TextView
                        android:id="@+id/bookingId2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="BK-2024-1102"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif-light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/bookingStatus2"
                        android:layout_marginEnd="12dp"/>

                    <!-- Test Type -->
                    <TextView
                        android:id="@+id/testType2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Corporate Investigation"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/bookingId2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="6dp"/>

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#333333"
                        app:layout_constraintTop_toBottomOf="@id/testType2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <!-- Info Grid -->
                    <LinearLayout
                        android:id="@+id/infoGrid2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <!-- Row 1: Requested Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="REQUESTED DATE"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 22, 2024"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LOCATION"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pretoria"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Payment Status Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#2A2A2A"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_test_type"
                                android:contentDescription="Quote"
                                app:tint="#D4AF37"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Quote Status"
                                android:textSize="13sp"
                                android:textColor="#CCCCCC"
                                android:layout_marginStart="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AWAITING QUOTE"
                                android:textSize="11sp"
                                android:textColor="#000000"
                                android:background="#9E9E9E"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Action Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewDetails2"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:text="VIEW DETAILS"
                        android:textSize="13sp"
                        android:textColor="#D4AF37"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        app:backgroundTint="#2A2A2A"
                        app:strokeColor="#D4AF37"
                        app:strokeWidth="1dp"
                        app:cornerRadius="6dp"
                        app:layout_constraintTop_toBottomOf="@id/infoGrid2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Booking 3 - Confirmed & Fully Paid -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Booking Status Badge -->
                    <TextView
                        android:id="@+id/bookingStatus3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFIRMED"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:background="#4CAF50"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Booking ID -->
                    <TextView
                        android:id="@+id/bookingId3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="BK-2024-0983"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif-light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/bookingStatus3"
                        android:layout_marginEnd="12dp"/>

                    <!-- Test Type -->
                    <TextView
                        android:id="@+id/testType3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Relationship Verification"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/bookingId3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="6dp"/>

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#333333"
                        app:layout_constraintTop_toBottomOf="@id/testType3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <!-- Info Grid -->
                    <LinearLayout
                        android:id="@+id/infoGrid3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/divider3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <!-- Row 1: Date & Time -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DATE"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nov 3, 2024"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TIME"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2:30 PM"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Row 2: Location & Examiner -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LOCATION"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cape Town"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EXAMINER"
                                    android:textSize="10sp"
                                    android:textColor="#999999"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dr. M. Chen"
                                    android:textSize="14sp"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Payment Status Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#2A2A2A"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_payment"
                                android:contentDescription="Payment"
                                app:tint="#D4AF37"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Status"
                                android:textSize="13sp"
                                android:textColor="#CCCCCC"
                                android:layout_marginStart="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FULLY PAID"
                                android:textSize="11sp"
                                android:textColor="#000000"
                                android:background="#4CAF50"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Action Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewDetails3"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:text="VIEW DETAILS"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        app:backgroundTint="#D4AF37"
                        app:cornerRadius="6dp"
                        app:layout_constraintTop_toBottomOf="@id/infoGrid3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure • Confidential • Professional"
            android:textSize="11sp"
            android:textColor="#666666"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/bookingsList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>