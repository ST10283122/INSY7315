<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="#D4AF37"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEY POLYGRAPH"
                    android:textSize="16sp"
                    android:textColor="#D4AF37"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AND INVESTIGATIONS"
                    android:textSize="11sp"
                    android:textColor="#B8960F"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.15"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Page Title Section -->
        <LinearLayout
            android:id="@+id/titleSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment Calendar"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#D4AF37"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Sarah Johnson"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- View Toggle Buttons -->
        <LinearLayout
            android:id="@+id/viewToggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/titleSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dayViewBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="DAY"
                android:textSize="12sp"
                android:textColor="#999999"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#1A1A1A"
                app:cornerRadius="6dp"
                android:layout_marginEnd="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/weekViewBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="WEEK"
                android:textSize="12sp"
                android:textColor="#999999"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#1A1A1A"
                app:cornerRadius="6dp"
                android:layout_marginEnd="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/monthViewBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="MONTH"
                android:textSize="12sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#D4AF37"
                app:cornerRadius="6dp"/>
        </LinearLayout>

        <!-- Month Navigation -->
        <LinearLayout
            android:id="@+id/monthNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/viewToggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/prevMonthBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Previous Month"
                app:tint="#D4AF37"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/currentMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="October 2024"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:id="@+id/nextMonthBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_forward"
                android:contentDescription="Next Month"
                app:tint="#D4AF37"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Calendar Grid -->
        <androidx.cardview.widget.CardView
            android:id="@+id/calendarCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/monthNavigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Weekday Headers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:text="SUN"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:text="MON"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:text="TUE"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:text="WED"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:text="THU"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:text="FRI"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="32dp"
                        android:text="SAT"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

                <!-- Week 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:layout_marginTop="8dp">

                    <!-- Empty cells for days before month start -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"/>

                    <!-- Day 1 -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <!-- Day 2 -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <!-- Day 3 -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <!-- Day 4 -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="4"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Week 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <!-- Days 5-11 -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="6"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="7"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="8"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="9"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="11"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Week 3 with booked day -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="12"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="13"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="14"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <!-- Day 15 - BOOKED -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:background="#D4AF37"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-medium"/>

                            <View
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                android:background="#000000"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="16"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="17"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="18"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Week 4 with multiple bookings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="19"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="20"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="21"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <!-- Day 22 - BOOKED -->
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:background="#D4AF37"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-medium"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2dp">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="4dp"
                                    android:background="#000000"
                                    android:layout_marginEnd="2dp"/>

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="4dp"
                                    android:background="#000000"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="23"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="24"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="25"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Week 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp">
                        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="26" android:textSize="14sp" android:textColor="#FFFFFF" android:gravity="center"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp">
                        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="27" android:textSize="14sp" android:textColor="#FFFFFF" android:gravity="center"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp">
                        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="28" android:textSize="14sp" android:textColor="#FFFFFF" android:gravity="center"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp">
                        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="29" android:textSize="14sp" android:textColor="#FFFFFF" android:gravity="center"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp">
                        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="30" android:textSize="14sp" android:textColor="#FFFFFF" android:gravity="center"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp">
                        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="31" android:textSize="14sp" android:textColor="#FFFFFF" android:gravity="center"/>
                    </FrameLayout>
                    <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Selected Day Appointments -->
        <TextView
            android:id="@+id/selectedDayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPOINTMENTS - OCTOBER 15"
            android:textSize="12sp"
            android:textColor="#999999"
            android:letterSpacing="0.2"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/calendarCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Appointments List for Selected Day -->
        <LinearLayout
            android:id="@+id/appointmentsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/selectedDayLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <!-- Appointment 1 -->
            <androidx.cardview.widget.CardView
