<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="48dp">

        <!-- Logo/Brand Section -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_logo"
            app:tint="#D4AF37"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Brand Name -->
        <TextView
            android:id="@+id/brandName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="KEY POLYGRAPH AND INVESTIGATIONS"
            android:textSize="24sp"
            android:textColor="#D4AF37"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Tagline -->
        <TextView
            android:id="@+id/brandSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Unlocking the truth"
            android:textSize="12sp"
            android:textColor="#B8960F"
            android:letterSpacing="0.15"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/brandName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Decorative Line -->
        <View
            android:id="@+id/decorativeLine"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="#D4AF37"
            app:layout_constraintTop_toBottomOf="@id/brandSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Security Icon -->
        <ImageView
            android:id="@+id/securityIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_shield"
            app:tint="#D4AF37"
            app:layout_constraintTop_toBottomOf="@id/decorativeLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Your Identity"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/securityIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter the 6-digit code sent to"
            android:textSize="14sp"
            android:textColor="#999999"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="14sp"
            android:textColor="#D4AF37"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- OTP Input Container -->
        <LinearLayout
            android:id="@+id/otpContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/emailText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="@drawable/otp_box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/otp2"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="@drawable/otp_box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/otp3"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="@drawable/otp_box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/otp4"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="@drawable/otp_box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/otp5"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="@drawable/otp_box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/otp6"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="@drawable/otp_box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Timer Text -->
        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code expires in 02:00"
            android:textSize="13sp"
            android:textColor="#999999"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/otpContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Verify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/verifyButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="VERIFY CODE"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:backgroundTint="#D4AF37"
            app:cornerRadius="8dp"
            app:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/timerText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- Resend Code Section -->
        <LinearLayout
            android:id="@+id/resendSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/verifyButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive code? "
                android:textSize="14sp"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/resendLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:textSize="14sp"
                android:textColor="#D4AF37"
                android:fontFamily="sans-serif-medium"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Back to Login -->
        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back to Login"
            android:textSize="14sp"
            android:textColor="#999999"
            android:fontFamily="sans-serif-light"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/resendSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure • Confidential • Professional"
            android:textSize="11sp"
            android:textColor="#666666"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/backToLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
