<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#D4AF37"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polygraph Session Details"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Appointment Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/appointmentInfoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Session Metadata Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Metadata"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking ID: BK-2024-1047"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examiner: Dr. Sarah Johnson (EX-2024-089)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client: John Doe"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Type: Pre-Employment Screening"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scheduled: Oct 15, 2024 â€¢ 10:00 AM"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Johannesburg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Status: DEPOSIT PAID"
                    android:textColor="#FFA726"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <!-- Actual Session Times -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Start Time"
                        android:textColorHint="#666666"
                        app:boxBackgroundColor="#2A2A2A"
                        app:boxStrokeColor="#D4AF37"
                        android:layout_marginEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/actualStartTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="End Time"
                        android:textColorHint="#666666"
                        app:boxBackgroundColor="#2A2A2A"
                        app:boxStrokeColor="#D4AF37"
                        android:layout_marginStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/actualEndTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Environment Conditions -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Environment Conditions"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/environmentConditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pre-Test Checklist Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/preTestCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/appointmentInfoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-Test Checklist"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <CheckBox
                    android:id="@+id/consentFormCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consent Form Signed"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp"/>

                <CheckBox
                    android:id="@+id/identityVerifiedCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Identity Verified"
                    android:textColor="#FFFFFF"/>

                <!-- ID Document Upload Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadIdButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Upload ID Document"
                    android:textSize="12sp"
                    app:backgroundTint="#2A2A2A"
                    app:cornerRadius="6dp"
                    android:layout_marginTop="8dp"/>

                <!-- Medical Screening Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Medical/Psychological Screening Notes"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/medicalNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="80dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Pre-test Questions Summary -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pre-test Questions Summary"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/preTestQuestions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="80dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Administration Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/testAdminCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/preTestCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Administration"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Equipment Calibration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <CheckBox
                        android:id="@+id/calibrationCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equipment Calibrated"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/calibrationTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:15 AM"
                        android:textColor="#999999"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <!-- Number of Charts -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of Charts Recorded"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/chartsRecorded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Test Format -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Format"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"/>

                <RadioGroup
                    android:id="@+id/testFormatGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/formatCQT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comparison Question Test (CQT)"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/formatDLT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Directed Lie Test (DLT)"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/formatOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="#FFFFFF"/>
                </RadioGroup>

                <!-- Question Sheet Upload -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadQuestionsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Attach Question Sheet"
                    android:textSize="12sp"
                    app:backgroundTint="#2A2A2A"
                    app:cornerRadius="6dp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Results Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/testAdminCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Results"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Observations -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observations"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/observations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="80dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Outcome -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Outcome"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"/>

                <RadioGroup
                    android:id="@+id/outcomeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/outcomePass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pass"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/outcomeFail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fail"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="16dp"/>

                    <RadioButton
                        android:id="@+id/outcomeInconclusive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inconclusive"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="16dp"/>
                </RadioGroup>

                <!-- Confidence Rating -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confidence Rating"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"/>

                <RatingBar
                    android:id="@+id/confidenceRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"
                    android:progressTint="#D4AF37"
                    android:secondaryProgressTint="#666666"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Post-Test Notes Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/postTestCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/resultsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post-Test Notes"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Examiner Comments -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Examiner's Comments"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/examinerComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="120dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Recommendations -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Recommendations"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/recommendations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="80dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Attachments Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/attachmentsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/postTestCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachments"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Upload Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadDocsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Upload Supporting Documents"
                    android:textSize="14sp"
                    app:backgroundTint="#2A2A2A"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadChartsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Attach Polygraph Charts"
                    android:textSize="14sp"
                    app:backgroundTint="#2A2A2A"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Report Generation Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/reportCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/attachmentsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Status"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <RadioGroup
                    android:id="@+id/reportStatusGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <RadioButton
                        android:id="@+id/reportDraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Draft"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/reportFinal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Final"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="16dp"/>
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/previewReportBtn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Preview Report"
                        android:textSize="14sp"
                        app:backgroundTint="#2A2A2A"
                        app:cornerRadius="8dp"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/generateReportBtn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Generate PDF"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        app:backgroundTint="#D4AF37"
                        app:cornerRadius="8dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>