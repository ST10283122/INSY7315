<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#D4AF37"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Details"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Appointment Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/appointmentInfoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Information"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/bookingReference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking ID: Loading..."
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/examinerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examiner: Loading..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/clientInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client: Loading..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/testTypeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Type: Loading..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/scheduledDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scheduled: Loading..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/locationInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Loading..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/paymentStatusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Status: Loading..."
                    android:textColor="#FFA726"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Execution Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/testExecutionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/appointmentInfoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Execution Details"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Test Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Test Date (YYYY-MM-DD)"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/testDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Test Time -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Test Time (HH:MM)"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/testTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Test Location -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Test Location"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/testLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Examinee Information Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/examineeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/testExecutionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examinee Information"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Examinee Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Examinee Full Name"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/examineeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Examinee Details -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Additional Examinee Details (Optional)"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/examineeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="80dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Results Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/examineeCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Results"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Result Summary -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Result Summary"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/resultSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="120dp"
                        android:gravity="top"
                        android:hint="e.g., Based on the polygraph examination conducted, the examinee has passed/failed. For more information contact the examiner."/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Test Outcome -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Outcome"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"/>

                <RadioGroup
                    android:id="@+id/outcomeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/outcomePass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pass"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/outcomeFail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fail"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/outcomeInconclusive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inconclusive"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/outcomeNDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Deception Indicated"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/outcomeDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deception Indicated"
                        android:textColor="#FFFFFF"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Internal Notes Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/internalNotesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/resultsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internal Notes (Not shown in report)"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Internal Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Internal Notes"
                    android:textColorHint="#666666"
                    app:boxBackgroundColor="#2A2A2A"
                    app:boxStrokeColor="#D4AF37"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/internalNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:minHeight="100dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statusCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/internalNotesCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Status"
                    android:textColor="#D4AF37"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <RadioGroup
                    android:id="@+id/statusRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <RadioButton
                        android:id="@+id/statusDraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Draft"
                        android:textColor="#FFFFFF"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/statusCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/statusReviewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviewed"
                        android:textColor="#FFFFFF"/>

                    <RadioButton
                        android:id="@+id/statusReleased"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Released"
                        android:textColor="#FFFFFF"/>
                </RadioGroup>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveTestBtn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save Test"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    app:backgroundTint="#D4AF37"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="24dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>